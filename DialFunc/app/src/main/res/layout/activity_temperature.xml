<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.zyzs.ewin.dialfunc.TemperatureActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:background="@color/black"
            android:text="室内室外温度"
            android:textColor="@color/white"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:src="@mipmap/back"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="226dp"
            android:layout_height="226dp"
            android:background="@drawable/wendu_bg_img"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/ll_temp_inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="35.2dp"
                        android:tint="@color/c_64FF96"
                        app:srcCompat="@drawable/shuzi_2_img"/>

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="35.2dp"
                        android:layout_marginLeft="3dp"
                        android:tint="@color/c_64FF96"
                        app:srcCompat="@drawable/shuzi_2_img"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/wendu_dw_img"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_temp_outer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="14.4dp"
                        android:layout_height="4.4dp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/c_50F5FF"
                        app:srcCompat="@drawable/shuzi_fh_img"/>

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="35.2dp"
                        android:layout_marginLeft="3dp"
                        android:tint="@color/c_50F5FF"
                        app:srcCompat="@drawable/shuzi_5_img"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/wendu_dw_img"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

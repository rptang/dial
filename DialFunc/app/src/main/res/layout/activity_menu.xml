<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zyzs.ewin.dialfunc.MenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24sp"
        android:background="@color/black"
        android:text="表盘Func"
        android:textColor="@color/white"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_compass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="指南针"/>

    <Button
        android:id="@+id/btn_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="液晶数字"/>

    <Button
        android:id="@+id/btn_svg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="svg图"/>

    <Button
        android:id="@+id/btn_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="室内室外温度"/>

    <Button
        android:id="@+id/btn_pm2d5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PM2.5"/>

    <Button
        android:id="@+id/btn_wall_clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="墙体时钟"/>

    <Button
        android:id="@+id/btn_speed_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时速码表"/>

    <Button
        android:id="@+id/btn_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前时间"/>

</LinearLayout>

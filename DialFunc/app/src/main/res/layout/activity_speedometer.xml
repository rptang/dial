<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.zyzs.ewin.dialfunc.NumberActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:background="@color/black"
            android:text="时速码表"
            android:textColor="@color/white"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:src="@mipmap/back"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="398dp"
            android:layout_height="351dp"
            android:layout_gravity="center">

            <com.zyzs.ewin.dialfunc.widget.SpeedView
                android:id="@+id/speed_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mabiao_bg_img"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="147dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/c_64FF96"
                    app:srcCompat="@drawable/shuzi_8_img"/>

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/c_64FF96"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/shuzi_0_img"/>

            </LinearLayout>

        </FrameLayout>

        <SeekBar
            android:id="@+id/speed_seek_bar"
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="100dp"
            android:max="260"
            android:progress="0"/>

    </FrameLayout>

</LinearLayout>
